<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.medicalCalculator.serverScripts.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>com.medicalCalculator.serverScripts.registrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userCalculationArea</servlet-name>
        <servlet-class>com.medicalCalculator.serverScripts.userCalculationArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.medicalCalculator.serverScripts.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userHomeServlet</servlet-name>
        <servlet-class>com.medicalCalculator.serverScripts.userHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userCalculationArea</servlet-name>
        <url-pattern>/userCalculationArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userHomeServlet</servlet-name>
        <url-pattern>/userHomeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
